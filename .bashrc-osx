mkramdisk() {
    RAMFS_SIZE_MB=1024
    mount_point=/Volumes/ramdisk
    ! test -e ${mount_point} && diskutil erasevolume HFS+ 'ramdisk' `hdiutil attach -nomount ram://$((${RAMFS_SIZE_MB}*1024*1024/512))`
}

rmramdisk() {
    mount_point=/Volumes/ramdisk
    test -e ${mount_point} && umount ${mount_point}
}

