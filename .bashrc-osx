alias ls='ls -G'
alias la='ls -A'
alias ll='ls -AlhF'
alias grep='grep --color=auto'
alias ping='ping -c 2'
alias rl='grealpath'
alias pd='pushd'
alias dirs='dirs -v'
alias pgrep='pgrep -lf'

alias nt='netstat -f inet -p tcp -n'
alias din='docker run -it --rm --privileged --pid=host walkerlee/nsenter -t 1 -m -n -i -u sh'

